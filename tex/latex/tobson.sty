\usepackage{bm}
\usepackage{amsmath}

\renewcommand{\vec}[1]{\ensuremath{\bm{#1}}}

\newcommand{\rmd}{\ensuremath{\mathrm{d}}}
\newcommand{\rme}{\ensuremath{\mathrm{e}}}
\newcommand{\rmi}{\ensuremath{\mathrm{i}}}

\newcommand{\kB}{\ensuremath{k_\mathrm{B}}}

\newcommand{\pder}[2]{\ensuremath{\frac{\partial{#1}}{\partial{#2}}}}
\newcommand{\pdder}[2]{\ensuremath{\frac{\partial^2{#1}}{\partial{#2}^2}}}

\newcommand{\der}[2]{\ensuremath{\frac{\rmd{#1}}{\rmd{#2}}}}
\newcommand{\dder}[2]{\ensuremath{\frac{\rmd^2{#1}}{\rmd{#2}^2}}}

\newcommand{\Der}[2]{\ensuremath{\frac{\mathrm{D}{#1}}{\mathrm{D}{#2}}}}
\newcommand{\DDer}[2]{\ensuremath{\frac{\mathrm{D}^2{#1}}{\mathrm{D}^2{#2}}}}

\newcommand{\ddt}[1]{\ensuremath{\der{#1}{t}}}
\newcommand{\DDt}[1]{\ensuremath{\Der{#1}{t}}}
